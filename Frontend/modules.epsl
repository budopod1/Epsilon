%import functions;
%import types_;
%import errors;
%import paths;
%import structs;

Module {
    [Str]:path,
    $S0ModuleContent:content
}

@super;
S0ModuleContent {
    Path:absolute_path,
    [Import]:imports
}

S0ModconResult {
    $S0ModuleContent?:modcon,
    $ErrorBundle:errors
}

@super;
@extends S0ModuleContent;
S1ModuleContent {
    [Struct_]:structs,
    [Struct_]:scoped_structs,
}

S1ModconResult {
    $S1ModuleContent?:modcon,
    $ErrorBundle:errors
}

@super;
@extends S1ModuleContent;
S2ModuleContent {
    [Global]:globals,
    [FunctionDeclaration]:func_decls
}

S2ModconResult {
    $S2ModuleContent?:modcon,
    $ErrorBundle:errors
}

Import {
    [Str]:path,
    Module?:referenced
}

Global {
    Field:field
}

Str#[Import:import].stringify_path {
    return [import.path].join["."];
}
